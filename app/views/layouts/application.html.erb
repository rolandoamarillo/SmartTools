<!DOCTYPE html >
<html>
	<head>
		<title>SmartTools</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag :defaults %>
		<%= javascript_include_tag 'jquery-1.7.1.min' => true %>
		<%= javascript_include_tag 'jquery.dropotron-1.0' => true %>
		<%= javascript_include_tag 'init' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div id="header-wrapper">
			<div id="header">
				<div id="logo">
					<h1><%= link_to "SmartTools", controller:"static_pages", action: "home" %></h1>
					<p>
						This is a text describing SmartTools
					</p>
				</div>
			</div>
		</div>

		<div id="menu-wrapper">
			<div id="menu-content">
				<ul id="menu">
					<li <% if current_page?(:controller => 'static_pages', :action =>
						'home') %> class="first" <% end %>>
						<%= link_to(controller:"static_pages", action: "home" , accesskey:"1", title:"") do %>
						<span>Home</span>
						<% end %>
					</li>
					<li <% if current_page?(:controller => 'static_pages', :action =>
						'about') %> class="first" <% end %>>
						<%= link_to(controller:"static_pages", action: "about", accesskey:"4", title:"") do %><span>About</span><% end %>
					</li>
					<% if logged_in? %>
					<li <% if current_page?(:controller => 'users', :action =>
						'index') %> class="first" <% end %>>
						<%= link_to(controller:"users", action: "show" , id: current_user.id) do %>
						<span>Profile</span>
						<% end %>
					</li>

					<li>
						<%= link_to logout_path, :method => :delete do %>
						<span>Log out</span>
						<% end %>
					</li>
					<% else %>
					<li <% if current_page?(:controller => 'sessions', :action =>
						'new') %> class="first" <% end %>>
						<%= link_to(controller:"sessions", action: "new" , title:"") do %>
						<span>Log in</span>
						<% end %>
					</li>
					<% end %>
				</ul>
			</div>
		</div>

		<div id="page">
			<div class="bgtop"></div>
			<div class="content-bg">
				<div class="content">
					<div class="post">
						<p class="date"></p>
						<% flash.each do |message_type, message| %>
						<div class="posted">
							<%= message %>
						</div>
						<% end %>
						<%= yield %>
					</div>
				</div>
			</div>
			<div class="bgbtm"></div>
		</div>
		<div id="footer">
			<p>
				Â© Your Website Name  |  Maximus4T by <a href="http://www.4templates.com/free/">4Templates</a> |  Photos by <a href="http://fotogrph.com/">Fotogrph</a>
			</p>
		</div>
	</body>
</html>

</body>
</html>
