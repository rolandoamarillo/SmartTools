<h1 class="title">Listing contests</h1>

<table class="posted">
	<thead>
		<tr>
			<th>Name</th>
			<th>Url</th>
			<th>Startdate</th>
			<th>Enddate</th>
			<th>Description</th>
			<th>User</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @contests.each do |contest| %>
		<tr>
			<td><%= contest.name %></td>
			<td><%= contest.url %></td>
			<td><%= contest.startdate %></td>
			<td><%= contest.enddate %></td>
			<td><%= contest.description %></td>
			<td><%= contest.user_id %></td>
			<td> <%= image_tag serve_contest_path(contest) %> </td>
			<td><%= link_to 'Show', contest %></td>
			<td><%= link_to 'Edit', edit_contest_path(contest) %></td>
			<td><%= link_to 'Destroy', contest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

