		<br>
		<%= f.text_field :url %>
	</div>
	<div class="field">
		<%= f.label :startdate %>
		<br>
		<%= f.date_select :startdate %>
	</div>
	<div class="field">
		<%= f.label :enddate %>
		<br>
		<%= f.date_select :enddate %>
	</div>
	<div class="field">
		<%= f.label :data %>
		<%= f.file_field :data %>
	</div>
	<div class="field">
		<%= f.label :description %>
		<br>
		<%= f.text_field :description %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
	<% end %>
