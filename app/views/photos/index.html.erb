<h1 class="title">Listing photos</h1>

<table class="posted">
	<thead>
		<tr>
			<th>Description</th>
			<th>Content type</th>
			<th>Filename</th>
			<th>Binary data</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @photos.each do |photo| %>
		<tr>
			<td><%= photo.description %></td>
			<td><%= photo.content_type %></td>
			<td><%= photo.filename %></td>
			<td><%= image_tag serve_photo_path(photo) %></td>
			<td><%= link_to 'Show', photo %></td>
			<td><%= link_to 'Edit', edit_photo_path(photo) %></td>
			<td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
<%= link_to 'New Photo', new_photo_path %>
</table>

<br>

